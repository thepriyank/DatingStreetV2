<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <solid android:width="20dp"/>
                <gradient
                    android:angle="90"
                    android:endColor="#9964E0"
                    android:startColor="#7E2BEE"
                    android:type="linear" />
            </shape>
        </rotate>
    </item>
    <item android:right="16dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ECE981" />
            <corners android:radius="10dp" />
            <gradient
                android:angle="90"
                android:endColor="#9964E0"
                android:startColor="#7E2BEE"
                android:type="linear" />
        </shape>
    </item>
</layer-list>